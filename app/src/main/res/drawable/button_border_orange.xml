<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 第一层 -->
    <item>
        <shape>
            <solid android:color="#3f000000" />
            <corners android:radius="5dp" />
        </shape>
    </item>
    <!-- 第二层 -->
    <item
        android:bottom="1dp"
        android:left="1dp"
        android:right="1dp"
        android:top="1dp">
        <shape>
            <corners android:radius="6dp" />
            <solid android:color="#f1ad5e" />
            <!-- 描边 -->
            <stroke
                android:width="1dp"
                android:color="#ffffffff" />
        </shape>
    </item>
</layer-list>