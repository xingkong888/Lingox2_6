<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/match_match"
    android:background="@color/three_e">

    <android.support.v7.widget.Toolbar
        android:id="@+id/add_photos_activity_toolbar"
        style="@style/match_wrap"
        android:background="@color/main_color"
        android:titleTextAppearance="@android:color/white">

        <Button
            android:id="@+id/add_photos_activity_toolbar_confirm_button"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_gravity="end"
            android:layout_marginRight="15dp"
            android:background="@null"
            android:text="Upload" />
    </android.support.v7.widget.Toolbar>

    <ListView
        android:id="@+id/add_photos_activity_photo_list"
        style="@style/match_match"
        android:layout_below="@+id/add_photos_activity_toolbar"
        android:divider="@color/three_c7"
        android:dividerHeight="1dp"
        android:listSelector="@android:color/transparent"
        android:scrollbarStyle="outsideOverlay"
        android:transcriptMode="normal" />

    <ImageView
        android:id="@+id/add_photos_activity_add_photo_button"
        style="@style/wrap_wrap"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:padding="8dp"
        android:src="@drawable/follow" />
</RelativeLayout>