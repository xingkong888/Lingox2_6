<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/three_e"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/album_list_activity_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/main_color"
        android:titleTextAppearance="@android:color/white">

        <Button
            android:id="@+id/album_list_activity_toolbar_confirm_button"
            style="@style/TitleBarText"
            android:layout_width="70dp"
            android:layout_height="35dp"
            android:layout_gravity="end"
            android:layout_marginRight="15dp"
            android:background="@android:color/transparent"
            android:text="@string/ok"
            android:visibility="gone" />

    </android.support.v7.widget.Toolbar>

    <GridView
        android:id="@+id/album_list_activity_grid_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:horizontalSpacing="20dp"
        android:numColumns="2"
        android:scrollbars="none"
        android:verticalSpacing="20dp" />

</LinearLayout>