<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.Toolbar
        android:id="@+id/main_activity_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#00838f"
        android:titleTextAppearance="@color/white" />

    <ImageView
        android:id="@+id/search"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="13dp"
        android:layout_marginTop="10dp"
        android:padding="5dp"
        android:src="@drawable/topbar_search_white_24dp" />

    <RelativeLayout
        android:id="@+id/show_num"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:layout_toLeftOf="@+id/search"
        android:visibility="gone">

        <TextView
            android:id="@+id/num"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="4dp"
            android:background="@drawable/message_point_28dp"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="10sp" />

        <ImageView
            android:id="@+id/notify"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:scaleType="centerInside"
            android:src="@drawable/ic_notifications_none_white_48dp" />

    </RelativeLayout>

    <android.support.v4.widget.DrawerLayout
        android:id="@+id/drawer_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/main_activity_toolbar"
        android:background="#efeff4"
        android:orientation="vertical"
        android:touchscreenBlocksFocus="false">

        <android.support.v4.view.ViewPager
            android:id="@+id/fragment_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/gray_light">

            <android.support.v4.view.PagerTabStrip
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:background="#00838f"
                android:textAppearance="@style/PagerTabStripText" />
        </android.support.v4.view.ViewPager>

        <LinearLayout
            android:id="@+id/left_drawer"
            android:layout_width="240dp"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:background="@color/white"
            android:divider="@android:color/transparent"
            android:dividerHeight="0dp"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/layout_top"
                android:layout_width="fill_parent"
                android:layout_height="160dp"
                android:background="@drawable/bac_left_drawer2">

                <cn.lingox.android.utils.CircularImageView
                    android:id="@+id/avatar_info"
                    android:layout_width="96dp"
                    android:layout_height="96dp"
                    android:layout_marginLeft="24dp"
                    android:layout_marginTop="24dp"
                    android:src="@drawable/nearby_nopic_137dp" />

                <ImageView
                    android:id="@+id/iv_flag"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_alignBottom="@+id/avatar_info"
                    android:layout_alignRight="@+id/avatar_info" />

                <TextView
                    android:id="@+id/tv_nickname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="24dp"
                    android:layout_marginTop="45dp"
                    android:layout_toRightOf="@+id/avatar_info"
                    android:text="@string/nickname"
                    android:textColor="@android:color/white"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_nickname"
                    android:layout_marginLeft="24dp"
                    android:layout_marginTop="10dp"
                    android:layout_toRightOf="@+id/avatar_info"
                    android:text="@string/nickname"
                    android:textColor="@android:color/white"
                    android:textSize="16sp" />

            </RelativeLayout>

            <TextView
                android:id="@+id/layout_contact_list"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:layout_marginLeft="24dp"
                android:drawableLeft="@drawable/ic_people_black_24dp"
                android:drawablePadding="12dp"
                android:gravity="center_vertical"
                android:text="@string/friends"
                android:textColor="@color/left_drawer_text_color"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/layout_set"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:layout_marginLeft="24dp"
                android:drawableLeft="@drawable/ic_settings_applications_black_24dp"
                android:drawablePadding="12dp"
                android:gravity="center_vertical"
                android:text="@string/setting"
                android:textColor="@color/left_drawer_text_color"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/layout_feedback"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:layout_marginLeft="24dp"
                android:drawableLeft="@drawable/ic_question_answer_black_24dp"
                android:drawablePadding="12dp"
                android:gravity="center_vertical"
                android:text="@string/feedback"
                android:textColor="@color/left_drawer_text_color"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/layout_info"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:layout_marginLeft="24dp"
                android:drawableLeft="@drawable/ic_info_outline_black_24dp"
                android:drawablePadding="12dp"
                android:gravity="center_vertical"
                android:text="@string/about_us"
                android:textColor="@color/left_drawer_text_color"
                android:textSize="16sp" />
        </LinearLayout>
    </android.support.v4.widget.DrawerLayout>
</RelativeLayout>