<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_light">

    <RelativeLayout
        android:id="@+id/asdfasdfasdf"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/main_color">

        <ImageView
            android:id="@+id/show_travel_back"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:scaleType="center"
            android:src="@drawable/ic_arrow_back_white_24dp" />

        <TextView
            android:id="@+id/show_travel_toolbar"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/show_travel_back"
            android:gravity="center"
            android:text="Travel Experiences"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="20sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="78dp"
        android:layout_below="@id/asdfasdfasdf"
        android:background="@color/three_fa">

        <cn.lingox.android.utils.CircularImageView
            android:id="@+id/show_travel_avatar"
            android:layout_width="66dp"
            android:layout_height="66dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/share_pic1_62dp" />

        <TextView
            android:id="@+id/show_travel_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/show_travel_avatar"
            android:text="adfasdfas"
            android:textSize="20sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/shadows" />
    </RelativeLayout>

    <ListView
        android:id="@+id/show_travel_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/top"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:divider="@null"
        android:dividerHeight="20dp"
        android:listSelector="@color/transparent"
        android:scrollbarStyle="outsideOverlay"
        android:transcriptMode="normal" />
</RelativeLayout>