<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_light">

    <RelativeLayout
        android:id="@+id/travel_view_top"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/main_color">

        <ImageView
            android:id="@+id/travel_view_back"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:scaleType="center"
            android:src="@drawable/ic_arrow_back_white_24dp" />

        <TextView
            android:id="@+id/travel_view_toolbar"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/travel_view_back"
            android:gravity="center"
            android:text="View"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="20sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/travel_view_top"
        android:background="@color/three_fa"
        android:paddingBottom="10dp"
        android:paddingLeft="20dp"
        android:paddingTop="10dp">
        <!-- 头像-->
        <cn.lingox.android.utils.CircularImageView
            android:id="@+id/travel_view_avatar"
            android:layout_width="66dp"
            android:layout_height="66dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/share_pic1_62dp" />
        <!-- 名字-->
        <TextView
            android:id="@+id/travel_view_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/travel_view_avatar"
            android:text="name"
            android:textSize="20sp" />
        <!--地点-->
        <TextView
            android:id="@+id/travel_view_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/travel_view_name"
            android:layout_toRightOf="@id/travel_view_avatar"
            android:text="Traveling in China" />
        <!-- 时间-->
        <LinearLayout
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/travel_view_avatar"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Time" />

            <TextView
                android:id="@+id/travel_view_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2015/12/29 - 2015/12/29" />
        </LinearLayout>
        <!-- 标签-->
        <LinearLayout
            android:id="@+id/tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/time"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Type" />

            <TextView
                android:id="@+id/travel_view_tag"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="标签" />
        </LinearLayout>
        <!-- 描述-->
        <TextView
            android:id="@+id/travel_view_describe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tag"
            android:text="dddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddd" />
        <!-- 可提供-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/travel_view_describe"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="What Can I provide:" />

            <TextView
                android:id="@+id/travel_view_provide"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="qqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqq" />
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>