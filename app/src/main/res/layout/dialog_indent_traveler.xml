<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:text="How long will you be in town?"
        android:textColor="@color/black_deep"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:padding="5dp"
            android:text="From:"
            android:textColor="@color/black_deep"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/indent_traveler_start"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:hint="Select time"
            android:padding="5dp"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:gravity="left"
            android:padding="5dp"
            android:text="To:"
            android:textColor="@color/black_deep"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/indent_traveler_end"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:hint="Select time"
            android:padding="5dp"
            android:textSize="20sp" />
    </LinearLayout>


    <EditText
        android:id="@+id/indent_traveler_num"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:hint=" # of travelers"
        android:inputType="numberDecimal"
        android:padding="5dp"
        android:paddingLeft="10dp"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/indent_traveler_describe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:hint=" Why are you joining?"
        android:padding="5dp"
        android:paddingLeft="10dp"
        android:textSize="20sp" />
</LinearLayout>