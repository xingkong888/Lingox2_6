<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/edit_page_5"
    style="@style/match_match"
    android:background="@color/transparent"
    android:visibility="gone">

    <TextView
        android:id="@+id/path_edit_time"
        style="@style/shadow_style"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        android:textColor="@color/white"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/availavle_time"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/path_edit_time"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"
        android:background="@drawable/edit_border"
        android:gravity="center"
        android:minHeight="50dp"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:visibility="gone" />

    <Button
        android:id="@+id/path_edit_start_time"
        android:layout_width="240dp"
        android:layout_height="50dp"
        android:layout_below="@+id/path_edit_time"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:background="@drawable/button_border_blue"
        android:hint="@string/start_time"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:visibility="gone" />

    <Button
        android:id="@+id/path_edit_end_time"
        android:layout_width="240dp"
        android:layout_height="50dp"
        android:layout_below="@+id/path_edit_start_time"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:background="@drawable/button_border_blue"
        android:hint="@string/end_time"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:visibility="gone" />
</RelativeLayout>