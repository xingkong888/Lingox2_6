<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/match_wrap"
    android:background="@color/white">
    <!-- 头像-->
    <RelativeLayout
        android:id="@+id/avatar_flg"
        style="@style/wrap_wrap">

        <cn.lingox.android.utils.CircularImageView
            android:id="@+id/travel_avatar"
            android:layout_width="58dp"
            android:layout_height="58dp"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/default_avatar" />

        <ImageView
            android:id="@+id/travel_country_flg"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignBottom="@+id/travel_avatar"
            android:layout_alignRight="@+id/travel_avatar"
            android:src="@drawable/flag_ac" />
    </RelativeLayout>
    <!-- 内容-->
    <LinearLayout
        style="@style/match_wrap"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/avatar_flg"
        android:orientation="vertical">
        <!-- 名字、地点-->
        <LinearLayout style="@style/wrap_wrap">
            <!-- 名字-->
            <TextView
                android:id="@+id/travel_user_name"
                style="@style/wrap_wrap"
                android:text="name" />
            <!-- 地点-->
            <TextView
                android:id="@+id/travel_location"
                style="@style/wrap_wrap"
                android:text="Traveling in China" />
        </LinearLayout>
        <!-- 描述-->
        <TextView
            android:id="@+id/travel_describe"
            style="@style/wrap_wrap"
            android:text="ddddddddddddddddddddddddddddddd" />
        <!-- 标签-->
        <TextView
            android:id="@+id/travel_tag"
            style="@style/wrap_wrap"
            android:text="sss" />

        <RelativeLayout style="@style/match_wrap">
            <!-- 发布时间-->
            <TextView
                android:id="@+id/travel_time"
                style="@style/wrap_wrap"
                android:text="time" />
            <!-- 回复人数-->
            <TextView
                android:id="@+id/reply"
                style="@style/wrap_wrap"
                android:layout_marginRight="5dp"
                android:layout_toLeftOf="@+id/travel_reply_num"
                android:text="reply" />

            <TextView
                android:id="@+id/travel_reply_num"
                style="@style/wrap_wrap"
                android:layout_marginRight="10dp"
                android:layout_toLeftOf="@+id/like"
                android:text="1" />
            <!--like人数 -->
            <TextView
                android:id="@+id/like"
                style="@style/wrap_wrap"
                android:layout_marginRight="5dp"
                android:layout_toLeftOf="@+id/travel_like_num"
                android:text="like" />

            <TextView
                android:id="@+id/travel_like_num"
                style="@style/wrap_wrap"
                android:layout_alignParentRight="true"
                android:layout_marginRight="15dp"
                android:text="3" />

        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>