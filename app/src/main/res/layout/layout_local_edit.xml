<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/match_match"
    android:background="@color/main_color">

    <ImageView
        android:id="@+id/path_edit_background"
        style="@style/match_match"
        android:layout_margin="2dp"
        android:background="@drawable/active_background_01_320dp520dp"
        android:scaleType="fitXY" />

    <ImageView
        android:id="@+id/path_edit_img"
        android:layout_width="match_parent"
        android:layout_height="249dp"
        android:layout_margin="2dp"
        android:background="@drawable/active_color" />

    <RelativeLayout
        android:id="@+id/xingqi"
        style="@style/match_wrap">

        <ImageView
            android:id="@+id/path_edit_close"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/active_off_61dp" />

        <ImageView
            android:id="@+id/path_edit_back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/active_back_61dp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/path_edit_num"
            style="@style/wrap_wrap"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="14dp"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:visibility="gone" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/qwer"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_below="@+id/xingqi">
        <!--local or traveler-->
        <include
            style="@style/match_match"
            layout="@layout/fragment_path_edit_0" />
        <!--选择地点-->
        <include
            style="@style/match_match"
            layout="@layout/fragment_path_edit_1" />
        <!--标题-->
        <include
            style="@style/match_match"
            layout="@layout/fragment_path_edit_2" />
        <!--标签-->
        <include
            style="@style/match_match"
            layout="@layout/fragment_path_edit_3" />
        <!--选择图片-->
        <include
            style="@style/match_match"
            layout="@layout/fragment_path_edit_4"
            android:visibility="gone" />
        <!--选择时间-->
        <include
            style="@style/match_match"
            layout="@layout/fragment_path_edit_5"
            android:visibility="gone" />

        <include
            style="@style/match_match"
            layout="@layout/fragment_path_edit_6"
            android:visibility="gone" />

        <include
            style="@style/match_match"
            layout="@layout/fragment_path_edit_7" />
    </RelativeLayout>

    <Button
        android:id="@+id/path_edit_next"
        android:layout_width="240dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:background="@drawable/button_border_blue_cyc"
        android:text="@string/path_edit_next"
        android:textColor="@color/white"
        android:textSize="22sp" />
</RelativeLayout>