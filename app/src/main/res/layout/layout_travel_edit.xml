<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_color">

    <RelativeLayout
        android:id="@+id/travel_xingqi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/travel_edit_close"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/active_off_61dp"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/travel_edit_back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/active_back_61dp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/travel_edit_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="14dp"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:visibility="gone" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/travel_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/active_map_01_320dp520dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_below="@+id/travel_xingqi">
        <!--要去的地方-->
        <include
            layout="@layout/include_travel_edit_1"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <!--你到当地需要的服务及描述-->
        <include
            layout="@layout/include_travel_edit_2"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <!--时间段-->
        <include
            layout="@layout/include_travel_edit_3"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <!--你作为本地人的时候能提供什么-->
        <include
            layout="@layout/include_travel_edit_4"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </RelativeLayout>

    <Button
        android:id="@+id/travel_edit_next"
        android:layout_width="240dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:background="@drawable/button_border_blue_cyc"
        android:text="@string/path_edit_next"
        android:textColor="@color/white"
        android:textSize="22sp" />
</RelativeLayout>