<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/left_drawer"
    android:layout_width="280dp"
    android:layout_height="match_parent"
    android:layout_gravity="start"
    android:background="@color/black_deep"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/layout_top"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_marginTop="80dp">

        <cn.lingox.android.utils.CircularImageView
            android:id="@+id/avatar_info"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:src="@drawable/nearby_nopic_137dp" />

        <!--<ImageView-->
        <!--android:id="@+id/iv_flag"-->
        <!--android:layout_width="24dp"-->
        <!--android:layout_height="24dp"-->
        <!--android:layout_alignBottom="@+id/avatar_info"-->
        <!--android:layout_alignRight="@+id/avatar_info" />-->

        <LinearLayout
            android:id="@+id/linshigong"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/avatar_info"
            android:orientation="vertical">
            <!--名字-->
            <TextView
                android:id="@+id/tv_nickname"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:text="@string/nickname"
                android:textColor="@android:color/white"
                android:textSize="14sp" />
            <!--地址-->
            <LinearLayout
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_nickname"
                android:layout_marginLeft="0.5dp"
                android:layout_marginTop="8.5dp"
                android:layout_toRightOf="@+id/avatar_info"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/lift_point" />

                <TextView
                    android:id="@+id/tv_user_add"
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4.5dp"
                    android:ellipsize="end"
                    android:text="China, Beijing"
                    android:textColor="@color/white"
                    android:textSize="13sp" />
            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:layout_width="18.5dp"
            android:layout_height="18.5dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30dp"
            android:layout_toRightOf="@+id/linshigong"
            android:src="@drawable/lift_edit" />
    </RelativeLayout>

    <!--收藏 -->
    <LinearLayout
        android:id="@+id/layout_favourite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="37.5dp"
        android:layout_marginTop="36dp">

        <ImageView
            android:layout_width="16dp"
            android:layout_height="15dp"
            android:src="@drawable/ic_favorite" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:text="Favourite"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="13sp" />
    </LinearLayout>
    <!-- follow/following-->
    <LinearLayout
        android:id="@+id/layout_contact_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="37.5dp"
        android:layout_marginTop="46.5dp">

        <ImageView
            android:layout_width="14dp"
            android:layout_height="16dp"
            android:src="@drawable/lift_follow_following" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:text="Follow"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="13sp" />
    </LinearLayout>
