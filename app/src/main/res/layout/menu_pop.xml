<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/wrap_match"
    android:background="@color/black_deep"
    android:orientation="vertical"
    android:padding="5dp">
    <!--收藏-->
    <LinearLayout
        android:id="@+id/menu_favourite"
        style="@style/wrap_match"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/menu_iv_favourite"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/active_dislike_24dp" />

        <TextView
            style="@style/wrap_wrap"
            android:gravity="center"
            android:padding="20dp"
            android:text="Favourite"
            android:textColor="@color/white" />
    </LinearLayout>
    <!--删除-->
    <LinearLayout
        android:id="@+id/menu_del"
        style="@style/wrap_match"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/top_delete_18dp" />

        <TextView
            style="@style/wrap_wrap"
            android:gravity="center"
            android:padding="20dp"
            android:text="Delete"
            android:textColor="@color/white" />
    </LinearLayout>

    <!-- 编辑-->
    <LinearLayout
        android:id="@+id/menu_edit"
        style="@style/wrap_match"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/top_edit_18dp" />

        <TextView
            style="@style/wrap_wrap"
            android:gravity="center"
            android:padding="20dp"
            android:text="Edit"
            android:textColor="@color/white" />
    </LinearLayout>

    <!--分享-->
    <LinearLayout
        android:id="@+id/menu_share"
        style="@style/wrap_match"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/active_share_24dp" />

        <TextView
            style="@style/wrap_wrap"
            android:gravity="center"
            android:padding="20dp"
            android:text="Share"
            android:textColor="@color/white" />
    </LinearLayout>

    <!--群聊-->
    <LinearLayout
        android:id="@+id/menu_group_chat"
        style="@style/wrap_match"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="gone">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/active_groupchat_24dp" />

        <TextView
            style="@style/wrap_wrap"
            android:gravity="center"
            android:padding="20dp"
            android:text="Group chat"
            android:textColor="@color/white" />
    </LinearLayout>

</LinearLayout>