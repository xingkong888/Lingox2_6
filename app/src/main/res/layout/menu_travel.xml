<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/wrap_match"
    android:background="@color/black_deep"
    android:orientation="vertical"
    android:padding="5dp"
    >
<!--收藏-->
    <LinearLayout
        android:id="@+id/menu_travel_favourite"
        style="@style/wrap_match"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal"
        >
        <ImageView
            android:id="@+id/menu_iv_favourite"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/active_dislike_24dp"
            />
    <TextView
        style="@style/wrap_wrap"
        android:text="Favourite"
        android:textColor="@color/white"
        android:gravity="center"
        android:padding="20dp"
        />
    </LinearLayout>
<!--删除-->
    <LinearLayout
        android:id="@+id/menu_travel_del"
        style="@style/wrap_match"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal"
        >
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/top_delete_18dp"
            />
        <TextView
            android:text="Delete"
            style="@style/wrap_wrap"
            android:textColor="@color/white"
            android:gravity="center"
            android:padding="20dp"
            />
    </LinearLayout>

    <!-- 编辑-->
    <LinearLayout
        android:id="@+id/menu_travel_edit"
        style="@style/wrap_match"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal"
        >
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/top_edit_18dp"
            />
        <TextView
            android:text="Edit"
            style="@style/wrap_wrap"
            android:textColor="@color/white"
            android:gravity="center"
            android:padding="20dp"
            />
    </LinearLayout>

<!--分享-->
    <LinearLayout
        android:id="@+id/menu_travel_share"
        style="@style/wrap_match"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal"
        >
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/active_share_24dp"
            />
        <TextView
            android:text="Share"
            style="@style/wrap_wrap"
            android:textColor="@color/white"
            android:gravity="center"
            android:padding="20dp"
            />
    </LinearLayout>

</LinearLayout>