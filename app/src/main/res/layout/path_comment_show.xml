<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/path_view_commit"
    style="@style/match_wrap"
    android:background="@color/white"
    android:focusable="false"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:background="@color/color_separation_line"
        android:visibility="gone" />

    <!--<RelativeLayout style="@style/match_wrap"-->
    <!--android:visibility="gone"-->
    <!-->-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#EBEBEB">

        <TextView
            android:id="@+id/lawu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingLeft="15dp"
            android:text="@string/path_comments"
            android:textAllCaps="true"
            android:textColor="#777"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/path_comments_num"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/lawu"
            android:layout_weight="1"
            android:gravity="right|center_vertical"
            android:paddingRight="20dp"
            android:textSize="10sp" />
    </LinearLayout>

    <!--<View-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="1dp"-->
    <!--android:layout_alignParentBottom="true"-->
    <!--android:background="@color/color_separation_line" />-->
    <!--</RelativeLayout>-->

    <LinearLayout
        android:id="@+id/path_view_comments_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="false"
        android:orientation="vertical" />
    <!-- 编辑评论-->
    <include layout="@layout/path_commit_edit" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:background="@color/color_separation_line" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="16dp" />

</LinearLayout>