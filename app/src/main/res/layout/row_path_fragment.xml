<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/path_layout_main"
    android:layout_width="match_parent"
    android:layout_height="280dp">

    <RelativeLayout
        style="@style/match_match"
        android:layout_above="@+id/asdfasdfasdf"
        android:background="@drawable/path">

        <ImageView
            android:id="@+id/path_bag"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:scaleType="fitXY" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_above="@+id/plmokn">

            <LinearLayout
                android:id="@+id/abc"
                style="@style/match_match"
                android:background="@drawable/gradient_black"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/ddddddddddd"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_marginLeft="10dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/icon_location" />

                <TextView
                    android:id="@+id/path_location"
                    style="@style/wrap_wrap"
                    android:layout_marginRight="8dp"
                    android:ellipsize="end"
                    android:gravity="end"
                    android:lines="1"
                    android:singleLine="true"
                    android:textColor="@color/white"
                    android:textSize="14sp" />
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/path_layout"
                style="@style/wrap_match"
                android:layout_alignParentRight="true"
                android:layout_marginRight="5dp"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/path_people"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/icon_like" />


                <!--android:id="@+id/path_people_num"-->
                <TextView
                    style="@style/wrap_wrap"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="8dp"
                    android:layout_toRightOf="@id/path_people"
                    android:textColor="@color/white"
                    android:textSize="14sp" />

                <ImageView
                    android:id="@+id/path_comment"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/icon_coment" />

                <TextView
                    android:id="@+id/path_comment_num"
                    style="@style/wrap_wrap"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="20dp"
                    android:layout_toRightOf="@id/path_comment"
                    android:textColor="@color/white"
                    android:textSize="14sp" />
            </RelativeLayout>
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/plmokn"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_below="@+id/path_bag"
            android:orientation="horizontal">

            <cn.lingox.android.utils.CircularImageView
                android:id="@+id/path_user_avatar"
                android:layout_width="58dp"
                android:layout_height="58dp"
                android:layout_marginLeft="14dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/app_icon" />

            <RelativeLayout style="@style/wrap_match">
                <!--活动标题-->
                <TextView
                    android:id="@+id/path_title"
                    style="@style/match_wrap"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="10dp"
                    android:paddingBottom="2dp"
                    android:textColor="#34495e"
                    android:textSize="18sp"
                    android:textStyle="bold" />
                <!--标签-->
                <LinearLayout
                    style="@style/wrap_wrap"
                    android:layout_below="@+id/path_title"
                    android:layout_marginTop="6dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/path_tag_1"
                        style="@style/wrap_wrap"
                        android:layout_marginBottom="5dp"
                        android:layout_marginRight="5dp"
                        android:background="@drawable/path_tag"
                        android:padding="4dp"
                        android:textColor="@color/main_color"
                        android:textSize="11sp"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/path_tag_2"
                        style="@style/wrap_wrap"
                        android:layout_marginBottom="5dp"
                        android:layout_marginRight="5dp"
                        android:background="@drawable/path_tag"
                        android:padding="4dp"
                        android:textColor="@color/main_color"
                        android:textSize="11sp"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/path_tag_3"
                        style="@style/wrap_wrap"
                        android:background="@drawable/path_tag"
                        android:padding="4dp"
                        android:textColor="@color/main_color"
                        android:textSize="11sp"
                        android:visibility="gone" />
                </LinearLayout>
                <!--用户名——————需求不显示-->
                <!--<TextView-->
                <!--android:id="@+id/path_user_name"-->
                <!--style="@style/wrap_wrap"-->
                <!--android:layout_below="@+id/path_title"-->
                <!--android:paddingBottom="2dp"-->
                <!--android:textColor="#868686"-->
                <!--android:textSize="15sp"-->
                <!--android:visibility="gone" />-->

            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>

    <TextView
        android:id="@+id/asdfasdfasdf"
        android:layout_width="match_parent"
        android:layout_height="13dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/gradient_black_1" />
    <!-- 收藏-->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:layout_marginTop="22.5dp"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/path_favourite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="center"
            android:src="@drawable/active_dislike_24dp" />

        <TextView
            android:id="@+id/path_people_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textColor="@color/white" />
    </LinearLayout>
