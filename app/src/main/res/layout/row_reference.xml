<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    style="@style/AppTheme"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants"
    card_view:cardBackgroundColor="@color/btn_white_normal"
    card_view:cardElevation="5dp">

    <RelativeLayout
        android:id="@+id/pdpdpd"
        style="@style/match_match">

        <ImageView
            android:id="@+id/refrence_replay"
            style="@style/wrap_wrap"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:focusable="false"
            android:padding="15dp"
            android:src="@drawable/activity_reply_color_24dp" />

        <RelativeLayout
            android:id="@+id/layout_avatar"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@color/main_color" />

            <cn.lingox.android.utils.CircularImageView
                android:id="@+id/avatar_reference"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="25dp"
                android:src="@drawable/default_avatar" />
        </RelativeLayout>


        <TextView
            android:id="@+id/name_reference"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="8dp"
            android:layout_toRightOf="@id/layout_avatar"
            android:gravity="center"
            android:textColor="@color/main_color"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/time_reference"
            style="@style/wrap_wrap"
            android:layout_alignLeft="@id/name_reference"
            android:layout_below="@id/name_reference"
            android:textColor="#ababab"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/content_reference"
            style="@style/match_wrap"
            android:layout_below="@id/layout_avatar"
            android:layout_marginTop="3dp"
            android:paddingBottom="6dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:textColor="@color/black_deep"
            android:textSize="15sp" />

        <RelativeLayout
            style="@style/match_wrap"
            android:layout_below="@+id/content_reference">

            <TextView
                android:id="@+id/name"
                style="@style/wrap_wrap"
                android:layout_marginLeft="10dp"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/refrence_replay_content"
                style="@style/match_wrap"
                android:layout_below="@+id/name"
                android:layout_margin="13dp"
                android:textColor="@color/black_deep" />
        </RelativeLayout>
    </RelativeLayout>

</android.support.v7.widget.CardView>



