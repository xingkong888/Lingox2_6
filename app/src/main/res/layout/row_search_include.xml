<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/nearby_view"
    android:layout_width="match_parent"
    android:layout_height="210dp">

    <RelativeLayout
        android:id="@+id/ddddddd"
        style="@style/match_match"
        android:layout_above="@+id/asdfasdfasdf">

        <ImageView
            android:id="@+id/nearby_avatar"
            style="@style/match_match"
            android:scaleType="fitXY" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/gradient_black"
            android:gravity="center_vertical">

            <LinearLayout
                android:id="@+id/abcdefg"
                style="@style/match_wrap"
                android:layout_alignParentBottom="true"
                android:layout_toLeftOf="@+id/mnbvcxz"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:layout_marginTop="10dp">

                    <ImageView
                        android:id="@+id/nearby_countryImg"
                        android:layout_width="30dp"
                        android:layout_height="22dp"
                        android:layout_alignParentTop="true" />

                    <TextView
                        android:id="@+id/nearby_name"
                        style="@style/shadow_style"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="12dp"
                        android:text="Diana"
                        android:textColor="@color/white"
                        android:textSize="23sp" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/nearby_country"
                    style="@style/shadow_style"
                    android:layout_marginLeft="12dp"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:textColor="@color/white"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/nearby_line"
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:layout_marginBottom="2dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="2dp"
                    android:background="@color/white" />

                <LinearLayout
                    android:id="@+id/nearby_layout"
                    style="@style/wrap_wrap"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="12dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="1dp">

                    <TextView
                        android:id="@+id/nearby_comment_"
                        style="@style/shadow_style"
                        android:text="@string/nearby_comment"
                        android:textColor="@color/white"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/nearby_comment"
                        style="@style/shadow_style"
                        android:layout_marginLeft="2dp"
                        android:textColor="@color/main_color"
                        android:textSize="12sp" />

                    <ImageView
                        android:id="@+id/nearby_point"
                        style="@style/wrap_wrap"
                        android:layout_marginLeft="4dp"
                        android:layout_marginRight="4dp"
                        android:src="@drawable/nearby_point_8dp" />

                    <TextView
                        android:id="@+id/nearby_speak_"
                        style="@style/shadow_style"
                        android:text="@string/nearby_sheak"
                        android:textColor="@color/white"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/nearby_speak"
                        style="@style/shadow_style"
                        android:layout_marginLeft="2dp"
                        android:textColor="@color/main_color"
                        android:textSize="12sp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/mnbvcxz"
                android:layout_width="95dp"
                android:layout_height="90dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/nearby_tag2"
                    style="@style/row_user_info_include_tag"
                    android:layout_marginBottom="4dp"
                    android:gravity="right"
                    android:text="@string/local_guide" />

                <TextView
                    android:id="@+id/nearby_tag1"
                    style="@style/row_user_info_include_tag"
                    android:layout_marginBottom="4dp"
                    android:layout_marginTop="4dp"
                    android:gravity="right"
                    android:text="@string/home_meal" />

                <TextView
                    android:id="@+id/nearby_tag3"
                    style="@style/row_user_info_include_tag"
                    android:layout_marginBottom="4dp"
                    android:layout_marginTop="4dp"
                    android:text="@string/home_stay" />
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>

    <TextView
        android:id="@+id/asdfasdfasdf"
        android:layout_width="match_parent"
        android:layout_height="13dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/gradient_black_1" />
</RelativeLayout>
