<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/notification_layout"
    style="@style/match_wrap"
    android:background="@color/gray_light">

    <LinearLayout
        style="@style/match_wrap"
        android:background="@drawable/travel_add"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp">

            <ImageView
                android:id="@+id/location_img"
                style="@style/wrap_wrap"
                android:layout_centerVertical="true"
                android:src="@drawable/travel_location_right_18dp" />

            <TextView
                android:id="@+id/show_travel_location"
                style="@style/match_match"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/location_img"
                android:gravity="center_vertical"
                android:hint="Location"
                android:textColor="@color/main_color" />

            <ImageView style="@style/row_travel_show_item_iv" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="30dp"
                android:background="#c7c7c7" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="30dp">

            <TextView
                android:id="@+id/start_time"
                style="@style/row_travel_show_item_tv_l"
                android:text="Start Time" />

            <TextView
                android:id="@+id/show_start_time_info"
                style="@style/row_travel_show_item_tv_r"
                android:layout_toRightOf="@+id/start_time"
                android:hint="Start Time" />

            <ImageView style="@style/row_travel_show_item_iv" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="10dp"
                android:background="#c7c7c7" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="30dp">

            <TextView
                android:id="@+id/end_time"
                style="@style/row_travel_show_item_tv_l"
                android:text="End Time" />

            <TextView
                android:id="@+id/show_end_time_info"
                style="@style/row_travel_show_item_tv_r"
                android:layout_toRightOf="@+id/end_time"
                android:hint="End Time" />

            <ImageView style="@style/row_travel_show_item_iv" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="10dp"
                android:background="#c7c7c7" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/travel_editanddel"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:visibility="gone">

            <ImageView
                android:id="@+id/show_travel_delete"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:padding="10dp"
                android:src="@drawable/comments_delete_9dp" />

            <ImageView
                android:id="@+id/show_travel_edit"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:layout_marginRight="15dp"
                android:layout_toLeftOf="@+id/show_travel_delete"
                android:padding="10dp"
                android:src="@drawable/personal_edit_18dp" />
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>