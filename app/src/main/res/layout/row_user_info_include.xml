<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/userinfo_view"
    style="@style/match_wrap"
    android:background="@color/three_fa">

    <RelativeLayout
        android:id="@+id/asdfasdf"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/userinfo_avatar"
            style="@style/match_wrap"
            android:scaleType="fitXY"
            android:src="@drawable/share_pic1_62dp" />

        <RelativeLayout
            android:id="@+id/lalalalalala"
            style="@style/match_wrap"
            android:layout_alignParentBottom="true"
            android:background="@drawable/nearby_colorgradient_360dp95dp"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="33dp"
                android:layout_above="@+id/userinfo_id">

                <ImageView
                    android:id="@+id/userinfo_countryImg"
                    android:layout_width="30dp"
                    android:layout_height="22dp"
                    android:layout_alignParentTop="true" />

                <TextView
                    android:id="@+id/userinfo_name"
                    style="@style/shadow_style"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="12dp"
                    android:text="Diana"
                    android:textColor="@color/white"
                    android:textSize="23sp" />

                <TextView
                    android:id="@+id/userinfo_sex"
                    style="@style/wrap_wrap"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="12dp"
                    android:layout_toRightOf="@+id/userinfo_name"
                    android:textColor="@color/white"
                    android:textSize="14sp" />
            </RelativeLayout>

            <TextView
                android:id="@+id/userinfo_id"
                style="@style/wrap_wrap"
                android:layout_above="@+id/userinfo_time"
                android:layout_marginLeft="12dp"
                android:textColor="@color/white"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/userinfo_time"
                style="@style/wrap_wrap"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="12dp"
                android:paddingBottom="8dp"
                android:textColor="@color/white"
                android:textSize="11sp" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="95dp"
            android:layout_height="80dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/userinfo_tag2"
                style="@style/row_user_info_include_tag"
                android:layout_marginBottom="2dp"
                android:text="@string/local_guide" />

            <TextView
                android:id="@+id/userinfo_tag1"
                style="@style/row_user_info_include_tag"
                android:layout_marginBottom="2dp"
                android:layout_marginTop="2dp"
                android:text="@string/home_meal" />

            <TextView
                android:id="@+id/userinfo_tag3"
                style="row_user_info_include_tag"
                android:layout_marginTop="2dp"
                android:text="@string/home_stay" />
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/userinfo_include"
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:layout_below="@+id/asdfasdf"
        android:background="@color/three_fa"
        android:baselineAligned="false"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/layout_follow"
            style="@style/row_user_info_include_linear">

            <TextView
                android:id="@+id/userinfo_follow"
                style="@style/row_user_info_include_num" />

            <TextView
                android:id="@+id/userinfo_follow_"
                style="@style/row_user_info_include_"
                android:text="@string/userinfo_follow" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_following"
            style="@style/row_user_info_include_linear">

            <TextView
                android:id="@+id/userinfo_following"
                style="@style/row_user_info_include_num" />

            <TextView
                android:id="@+id/userinfo_following_"
                style="@style/row_user_info_include_"
                android:text="@string/userinfo_following" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_reference"
            style="@style/row_user_info_include_linear">

            <TextView
                android:id="@+id/userinfo_reference"
                style="@style/row_user_info_include_num" />

            <TextView
                android:id="@+id/userinfo_reference_"
                style="@style/row_user_info_include_"
                android:text="@string/userinfo_reference" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/userinfo_include"
        android:background="@drawable/shade" />
</RelativeLayout>
